<div class="product product__style--4">
  <div class="col-lg-3 col-md-3 col-sm-6 col-12">
    <div class="product__thumb">
      <%= link_to book_path(book), class:"first__img" do %>
        <%= image_tag book.images.first.link_url if book.images.present? %>
      <% end %>
      <%= link_to book_path(book), class:"second__img animation1" do %>
        <%= image_tag book.category.avatar if book.category.avatar.present? %>
      <% end %>
      <div class="hot__box">
        <span class="hot-label"><%= t ".hot" %></span>
      </div>
    </div>
    <div class="product__content content--center">
      <h4><a href="single-product.html"><%= book.name %></a></h4>
      <ul class="prize d-flex">
        <li></li>
      </ul>
      <div class="action">
        <div class="actions_inner">
          <ul class="add_to_links">
            <li><a class="cart" href="cart.html"><i class="fas fa-shopping-bag"></i></a></li>
            <li>
              <a data-toggle="modal" class="quickview modal-view detail-link" href="#productmodal">
                <i class="fas fa-search"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
