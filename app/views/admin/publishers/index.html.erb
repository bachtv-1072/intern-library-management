<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">List Publishers</h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <%= render "form_publisher" %>
            <table id="category" class="table table-striped table-bordered">
              <thead>
                <th><%= t "categories.list.column_name" %></th>
                <th><%= t "categories.list.column_action" %></th>
              </thead>
              <tbody class="publishers">
                <%= render @publishers %>
              </tbody>
              <%= paginate @publishers, theme: "twitter-bootstrap-4" %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
