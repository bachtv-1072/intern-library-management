<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"><%= t "books.array"%></h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
          <%= link_to t("books.index"), new_admin_book_path, class: "btn btn-primary" %>
            <div class="container">
              <table id="book" class="table table-striped table-bordered">
                <thead>
                  <th><%= t "books.list.column_id" %></th>
                  <th><%= t "books.list.column_name" %></th>
                  <th><%= t "books.list.column_quantity" %></th>
                  <th><%= t "books.list.column_quantity_last" %></th>
                  <th><%= t "books.list.column_action" %></th>
                </thead>
                <tbody>
                  <%= render @books %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
