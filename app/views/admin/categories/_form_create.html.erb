<button type="button" class="btn btn-primary" data-toggle="modal"
  data-target="#myModal">
  <%= t "categories.create"%>
</button>

<!-- The Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;
        </button>
      </div>
      <%= form_with model: [:admin, @category] do |f| %>
        <div class="modal-body">
          <div class="custom-file">
            <%= f.file_field :avatar, class: "custom-file-input",
              id: "customFile" %>
            <%= f.label :avatar, t("categories.file"),
              class: "custom-file-label", for: "customFile" %>
          </div>
          <div class="form-group">
            <%= f.label :title, t("categories.list.column_name") %>
            <%= f.text_field :title, class:"form-control" ,
              placeholder: t("categories.placeholder") %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit t("categories.submit"), class:"btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
