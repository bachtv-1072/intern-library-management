<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">List Authors</h1>
      </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
          <%= render "form_create" %>
            <div class="container">
              <table id="author" class="table table-striped table-bordered">
                <thead>
                  <th>Name</th>
                  <th>Birth</th>
                  <th>Action</th>
                </thead>
                <tbody class="authours">
                  <%= render @authors %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
