<button type="button" class="btn btn-primary" data-toggle="modal"
  data-target="#create_author">
  Create Author
</button>
<div class="modal fade" id="create_author">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;
        </button>
      </div>
      <%= form_for [:admin,@author], remote: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, t("categories.list.column_name") %>
            <%= f.text_field :name, class:"form-control" ,
              placeholder:"Enter ..." %>
          </div>
          <div class="form-group">
            <%= f.label :story %>
            <%= f.text_area :story, class:"form-control",
              placeholder:"Description..." %>
          </div>
          <div class="form-group">
            <%= f.label :birth %>
            <%= f.text_field :birth, class:"form-control",
              placeholder:"Description..." %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit t("categories.submit"), class:"btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
