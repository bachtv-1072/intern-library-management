<div class="modal fade" id="borrowing_accepted_<%= borrowing.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= t "borrowings.index.detail" %></h4>
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
      </div>
      <div class="modal-body">
        <% borrowing.books.each_with_index do |book, index| %>
          <%= index + Settings.number %>. <%= book.name %>
          <br>
        <% end %>
        <p><%= t ".date_borrow" %>:<%= borrowing.date_borrow.strftime Settings.convert_date if borrowing.date_borrow.present? %></p>
        <p><%= t ".date_pay" %>:<%= borrowing.date_pay.strftime Settings.convert_date if borrowing.date_pay.present? %></p>
      </div>
    </div>
  </div>
</div>
